generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

enum Role {
  admin
  editor
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  role          Role      @default(editor)

  accounts      Account[]
  sessions      Session[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  userId             String  @db.ObjectId
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

type ProductSection {
  heading String
  items   String[]
}

type ProductSpec {
  label String
  value String
}

model Product {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  slug      String   @unique
  title     String
  summary   String
  highlight String?
  image String
  gallery   String[] @default([])
  sections  ProductSection[]
  specs     ProductSpec[]
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lead {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  company   String
  website   String?
  type      String
  region    String?
  message   String?
  ip        String?
  userAgent String?
  referrer  String?
  status    String   @default("new")
  notes     String?
  createdAt DateTime @default(now())
}

model Note {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  pinned    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// severity: "info" | "warning" | "error"
model ActivityLog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  action      String   // e.g. PRODUCT_CREATED, LEAD_STATUS_CHANGED
  entity      String   // product | lead | user | note | profile
  entityId    String?
  entityTitle String?
  actorEmail  String
  actorName   String?
  severity    String   @default("info")
  detail      String?
  createdAt   DateTime @default(now())
}